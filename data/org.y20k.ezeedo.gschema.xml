<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id='org.y20k.ezeedo' path='/org/y20k/ezeedo/'>

    <key type='i' name='main-window-position-x'>
      <summary>Main window position x</summary>
      <description>x-coordinate of the main window position</description>
      <default>20</default>
    </key>

    <key type='i' name='main-window-position-y'>
      <summary>Main window position y</summary>
      <description>y-coordinate of the main window position</description>
      <default>20</default>
    </key>

    <key type='i' name='main-window-width'>
      <summary>Main window width</summary>
      <description>Width of the main window</description>
      <default>720</default>
    </key>

    <key type='i' name='main-window-height'>
      <summary>Main window height</summary>
      <description>Height of the main window</description>
      <default>480</default>
    </key>

    <key type='s' name='todo-txt-file'>
      <summary>Todo.txt file</summary>
      <description>Location and name of the todo.txt file</description>
      <default>''</default>
    </key>
  </schema>
</schemalist>
